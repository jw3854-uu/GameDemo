.complex-block {
    width: auto;
    height: 30px;
    background-color: rgb(65, 65, 65);
    border-radius: 6px;
    margin: 5px;
    justify-content: center;
    align-items: center;
    color: white;
    -unity-font-style: bold;
    transition: background-color 0.1s ease-in-out;
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 1px;
    margin-bottom: 1px;
    padding-left: 1px;
    padding-right: 1px;
    padding-top: 1px;
    padding-bottom: 1px;
}

.complex-block:hover {
    background-color: rgb(68, 68, 68);
}

.complex-block.selected {
    background-color: rgb(44, 93, 135);
    border: 1px solid rgb(74, 133, 198);
}